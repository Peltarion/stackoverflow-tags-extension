{
  "name": "Stackoverflow tags",
  "version": "1.0",
  "description": "Auto tag your Stack Overflow posts",
  "manifest_version": 2,
  "background": {
    "scripts": ["src/extension/background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["https://stackoverflow.com/questions/ask"],
      "run_at": "document_idle",
      "css": ["src/style.css"],
      "js": ["src/extension/content.js"]
    }
  ],
  "page_action": {
    "default_popup": "src/extension/popup.html"
  },
  "permissions": ["declarativeContent", "storage"],
  "web_accessible_resources": [
    "src/main.js",
    "src/dom.js",
    "src/api.js",
    "src/utils.js"
  ]
}
